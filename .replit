modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:2.0.0"]

[nix]
channel = "stable-25_05"
packages = ["redis", "glib", "nss", "nspr", "at-spi2-atk", "cups", "libdrm", "gtk3", "pango", "cairo", "alsa-lib", "mesa", "expat", "dbus", "libxkbcommon", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXrandr", "xorg.libXfixes", "xorg.libXext", "xorg.libX11", "xorg.libxcb", "libgbm"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Service"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && pkill -f vite-stable 2>/dev/null; pkill -f vite-proxy 2>/dev/null; sleep 0.5; setsid node scripts/vite-stable.mjs --port 5000 --host 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server --daemonize yes --port 6379 --bind 127.0.0.1 --save \"\" --maxmemory 50mb --maxmemory-policy allkeys-lru 2>/dev/null; sleep 1; cd /home/runner/workspace/sheets-backend && pnpm install --prefer-offline 2>/dev/null && PORT=3000 node dist/main.js"
waitForPort = 3000

[[workflows.workflow]]
name = "AI Service"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/ai-service && npx tsx src/server.ts"
waitForPort = 3001

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 4545
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002
exposeLocalhost = true

[[ports]]
localPort = 5002
externalPort = 4200

[[ports]]
localPort = 5003
externalPort = 5000

