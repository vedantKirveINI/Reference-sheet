{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@teable/v2-test-node",
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "incremental": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist",
    "composite": true,
    "rootDir": "../",
    "outDir": "dist",
    "paths": {
      "@teable/v2-container-node-test": ["../container-node-test/src"],
      "@teable/v2-adapter-logger-console": ["../adapter-logger-console/src"],
      "@teable/v2-adapter-record-repository-postgres": [
        "../adapter-record-repository-postgres/src"
      ],
      "@teable/v2-adapter-table-repository-postgres": ["../adapter-table-repository-postgres/src"],
      "@teable/v2-adapter-repository-postgres": ["../adapter-repository-postgres/src"],
      "@teable/v2-core": ["../core/src"],
      "@teable/v2-adapter-db-postgres-pg": ["../adapter-db-postgres-pg/src"],
      "@teable/v2-adapter-db-postgres-shared": ["../adapter-db-postgres-shared/src"],
      "@teable/v2-di": ["../di/src"],
      "@teable/v2-contract-http": ["../contract-http/src"],
      "@teable/v2-formula-sql-pg": ["../formula-sql-pg/src"],
      "@teable/v2-postgres-schema": ["../postgres-schema/src"],
      "@teable/v2-table-templates": ["../table-templates/src"]
    },
    "types": ["vitest/globals"]
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "./dist",
    "./coverage",
    "../core/src/**/*.spec.ts",
    "../adapter-record-repository-postgres/src/**/*.spec.ts",
    "../adapter-repository-postgres/src/**/*.spec.ts",
    "../adapter-table-repository-postgres/src/**/*.spec.ts"
  ],
  "include": [
    "vitest.setup.ts",
    "src",
    "../container-node-test/src",
    "../adapter-logger-console/src",
    "../adapter-record-repository-postgres/src",
    "../adapter-table-repository-postgres/src",
    "../adapter-repository-postgres/src",
    "../core/src",
    "../adapter-db-postgres-pg/src",
    "../adapter-db-postgres-shared/src",
    "../di/src",
    "../contract-http/src",
    "../formula-sql-pg/src",
    "../postgres-schema/src",
    "../table-templates/src"
  ]
}
