{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@teable/v2-devtools",
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "incremental": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist",
    "composite": true,
    "rootDir": "../../",
    "outDir": "dist",
    "paths": {
      "@teable/v2-core": ["../core/src"],
      "@teable/v2-di": ["../di/src"],
      "@teable/v2-container-node": ["../container-node/src"],
      "@teable/v2-debug-data": ["../debug-data/src"],
      "@teable/v2-dottea": ["../dottea/src"],
      "@teable/v2-mock-records": ["../mock-records/src"],
      "@teable/v2-command-explain": ["../command-explain/src"]
    },
    "types": ["node"]
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "./dist",
    "./coverage",
    "../core/src/**/*.spec.ts",
    "../core/src/**/*.test.ts"
  ],
  "include": [
    "src",
    "bin",
    "../core/src",
    "../di/src",
    "../container-node/src",
    "../debug-data/src",
    "../dottea/src",
    "../mock-records/src",
    "../command-explain/src"
  ]
}
